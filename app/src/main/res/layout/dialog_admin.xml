<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_dialog"
    android:padding="@dimen/_15sdp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/leave_request"
        android:background="@drawable/background_box"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/employee_leave_request"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="@dimen/_12sdp"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/missed_punch"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/background_box"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/employee_missed_punch_request"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="@dimen/_12sdp"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/comp_off"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/background_box"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/employee_comp_off_holiday_request"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/text"
            android:textAlignment="center"/>

    </LinearLayout>



</LinearLayout>